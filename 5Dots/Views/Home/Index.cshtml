@model User
@{
    ViewData["Title"] = "Home Page";
}
<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>All Categories</span>
                    </div>
                    <ul>
                        @foreach (var item in ViewBag.Categories)
                        {
                             <li><a href="#">@item.CategoryName</a></li> 
                        }
                        
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            <div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>
                            </div>
                            <input type="text" placeholder="What do yo u need?">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>

                </div>


                <div class="hero__item">
                    <div class="hero__text">
                        <span>Smart Phone</span>
                        <h2>Phones <br />100% Original</h2>
                        <p>Experience seamless convenience with our hassle-free delivery options</p>
                        <a href="#" class="primary-btn">BUY NOW</a>
                    </div>
                    <img class="hero__image" src="~/assets/img/hero/bg2.png" alt="Background Image" />
                </div>







            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                @foreach (var item in ViewBag.Categories)
                {
                        <div class="col-lg-3">
                        <img class="categories__item set-bg" src="@item.Image">
                            <h5 class="text-center"><a href="#">@item.CategoryName</a></h5>

                        </div>
                }
                
                
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="@(ViewBag.SelectedCategory == null ? " active" : "" )" data-filter="*">All</li>
                        @foreach (var category in ViewBag.Categories)
                        {
                                <li data-filter=".@category.CategoryName.ToLower()">@category.CategoryName
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var product in ViewBag.Products)
            {
                var categoryId = product.CategoryId;
                short ProductCounter = 5;
                if (ProductCounter == 0)
                {
                    break;
                }
                // Check if the product belongs to the selected category
                if (ViewBag.SelectedCategory == null || categoryId == ViewBag.SelectedCategory)
                {
                    ProductCounter--;
                                    <div class="col-lg-3 col-md-4 col-sm-6 mix @product.Category.CategoryName.ToLower()">
                        <div class="featured__item">
                            @{
                                string imageBase64 = Convert.ToBase64String(product.Image);
                            }

                            <div class="featured__item__pic set-bg" >
                                   <img src="data:image;base64,@imageBase64">
                                <ul class="featured__item__pic__hover">
                                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                    <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <div class="featured__item__text">
                                <h6><a href="#">@product.ProductName</a></h6>
                                        <h5>@string.Format("{0:C}", product.ProductPrice)</h5>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>



    </div>
    </div>
</section>
<!-- Featured Section End -->
<!-- Banner Begin -->
<div class="banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
